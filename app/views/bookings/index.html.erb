<h2>Your Boat Bookings ⛵️</h2>

<ul>
  <% @bookings.each do |booking| %>
    <li> Start Date: <%= booking.start_date %> | End Date: <%= booking.end_date %></li>
    <li> Confirmed: <%= booking.confirmed %></li>
    <li> Boat: <%= booking.boat_id %></li>
    <li> <%= link_to "#{booking.boat.description}", booking_path(booking)%></li>
  <% end %>
</ul>

<%= link_to "Discover more boats", boats_path, class: "btn btn-primary btn-lg" %>

