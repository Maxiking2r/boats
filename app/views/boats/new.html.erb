<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Add your boat</h1>

      <%= simple_form_for(@boat) do |f| %>
        <%= f.input :city %>
        <%= f.input :description %>
        <%= f.input :number_of_people %>
        <%= f.input :category %>
        <%= f.button :submit, class: "btn btn-primary btn-lg"%>
      <% end %>
    </div>
  <%= link_to "All the boats", boats_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>
